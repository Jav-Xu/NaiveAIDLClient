<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.javxu.naiveaidlclient.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_startself"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="startSelfService"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_bindself"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="bindSelfService"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_callself"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="callSelfServiceMethod"
            android:textAllCaps="false"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/button_unbindself"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="unbindSelfService"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_stopself"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="stopSelfService"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_startremote"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="startRemoteService"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_bindremote"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="bindRemoteService"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_callremote"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="callRemoteServiceMethod"
            android:textAllCaps="false"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/button_unbindremote"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="unbindRemoteService"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_stopremote"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="stopRemoteService"
            android:textAllCaps="false"/>

    </LinearLayout>


</LinearLayout>
